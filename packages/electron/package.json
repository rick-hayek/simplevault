{
    "name": "@premium-password-manager/electron",
    "version": "0.0.1",
    "description": "Secure password management for desktop.",
    "author": "Rick Huang",
    "private": true,
    "main": "dist/main.js",
    "scripts": {
        "dev": "tsc && electron .",
        "build": "tsc",
        "watch": "tsc -w",
        "package": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.premium.passwordmanager",
        "productName": "EtherVault",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            "app-dist/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        }
    },
    "devDependencies": {
        "electron": "34.0.1",
        "electron-builder": "^26.4.0",
        "typescript": "^5.0.0"
    }
}