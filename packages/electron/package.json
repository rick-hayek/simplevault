{
    "name": "@premium-password-manager/electron",
    "version": "0.0.1",
    "description": "Secure password management for desktop.",
    "author": "Rick Huang",
    "private": true,
    "main": "dist/main.js",
    "scripts": {
        "dev": "tsc && electron .",
        "build:preload": "esbuild src/preload.ts --bundle --platform=node --target=node18 --external:electron --outfile=dist/preload.js",
        "watch": "tsc -w",
        "package": "npm run build && electron-builder",
        "build": "npm run build:main && npm run dist",
        "build:main": "tsc",
        "dist": "electron-builder --mac"
    },
    "build": {
        "appId": "com.premium.passwordmanager",
        "productName": "EtherVault",
        "icon": "assets/icon.png",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            "app-dist/**/*",
            "package.json"
        ],
        "extends": null,
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        }
    },
    "dependencies": {
        "@premium-password-manager/core": "file:../core",
        "libsodium-wrappers-sumo": "^0.8.1"
    },
    "devDependencies": {
        "electron": "34.0.1",
        "electron-builder": "^26.4.0",
        "esbuild": "^0.25.12",
        "typescript": "^5.0.0"
    }
}