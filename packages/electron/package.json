{
    "name": "@ethervault/electron",
    "version": "0.0.2",
    "description": "Secure password management for desktop.",
    "author": "Rick Huang",
    "private": true,
    "main": "dist/main.js",
    "scripts": {
        "dev": "tsc && electron .",
        "watch": "tsc -w",
        "build": "npm run build:main && npm run build:preload",
        "build:main": "esbuild src/main.ts --bundle --platform=node --target=node18 --external:electron --outfile=dist/main.js",
        "build:preload": "esbuild src/preload.ts --bundle --platform=node --target=node18 --external:electron --outfile=dist/preload.js",
        "type-check": "tsc --noEmit",
        "dist": "npm run build && electron-builder",
        "dist:mac": "npm run build && electron-builder --mac --x64 --arm64",
        "dist:win": "npm run build && electron-builder --win",
        "dist:linux": "npm run build && electron-builder --linux",
        "pack": "npm run build && electron-builder --dir"
    },
    "build": {
        "appId": "com.ethervault.app",
        "productName": "EtherVault",
        "icon": "assets/icon.png",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            {
                "from": "../app/dist",
                "to": "app-dist",
                "filter": [
                    "**/*"
                ]
            },
            "package.json",
            "assets/**/*"
        ],
        "extends": null,
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "protocols": [
            {
                "name": "EtherVault",
                "schemes": [
                    "com.ethervault.app"
                ]
            }
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        }
    },
    "dependencies": {
        "@ethervault/core": "file:../core",
        "electron-log": "^5.4.3",
        "libsodium-wrappers-sumo": "^0.8.1"
    },
    "devDependencies": {
        "electron": "34.0.1",
        "electron-builder": "^26.4.0",
        "esbuild": "^0.25.12",
        "typescript": "^5.0.0"
    }
}